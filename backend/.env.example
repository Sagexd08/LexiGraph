# Lexigraph Backend Environment Variables

# Server settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# Model settings
MODEL_PATH=./models/lora_output
BASE_MODEL=runwayml/stable-diffusion-v1-5
MODEL_TYPE=lora
USE_SAFETENSORS=true

# Generation settings
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
DEFAULT_STEPS=20
DEFAULT_GUIDANCE_SCALE=7.5
MAX_WIDTH=1024
MAX_HEIGHT=1024
MAX_STEPS=100
MAX_GUIDANCE_SCALE=20.0

# Hardware settings
DEVICE=auto
ENABLE_CPU_OFFLOAD=true
ENABLE_ATTENTION_SLICING=true
ENABLE_XFORMERS=true
TORCH_DTYPE=float16

# API settings
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=300
MAX_PROMPT_LENGTH=500
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
API_KEY=

# Hugging Face settings
HF_TOKEN=
HF_CACHE_DIR=

# Safety settings
ENABLE_SAFETY_CHECKER=false
NSFW_THRESHOLD=0.7
