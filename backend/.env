# Lexigraph Backend - Tiny Model Verification Environment

# Server settings
DEBUG=true
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# Model settings
MODEL_PATH=runwayml/stable-diffusion-v1-5
BASE_MODEL=runwayml/stable-diffusion-v1-5
MODEL_TYPE=base
USE_SAFETENSORS=true

# Generation settings
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
DEFAULT_STEPS=5
DEFAULT_GUIDANCE_SCALE=7.5
MAX_WIDTH=1024
MAX_HEIGHT=1024
MAX_STEPS=100
MAX_GUIDANCE_SCALE=20.0

# Hardware settings (CPU for verification)
DEVICE=cpu
ENABLE_CPU_OFFLOAD=false
ENABLE_ATTENTION_SLICING=true
ENABLE_XFORMERS=false
TORCH_DTYPE=float32

# API settings
MAX_CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT=120
MAX_PROMPT_LENGTH=500
CORS_ORIGINS=["http://localhost:3031", "http://127.0.0.1:3031", "http://localhost:3000", "http://127.0.0.1:3000"]
API_KEY=

# Hugging Face settings
HF_TOKEN=
HF_CACHE_DIR=

# Safety settings
ENABLE_SAFETY_CHECKER=false
NSFW_THRESHOLD=0.7
